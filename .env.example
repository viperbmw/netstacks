# NetStacks Configuration
# Copy this file to .env and customize for your environment

# Docker Platform Configuration
# Set the platform for your architecture
# Options: linux/amd64, linux/arm64
# If not set, defaults to linux/amd64
#DOCKER_DEFAULT_PLATFORM=linux/amd64
#DOCKER_DEFAULT_PLATFORM=linux/arm64

# ===========================================
# Security Configuration (CHANGE IN PRODUCTION!)
# ===========================================

# JWT Secret Key - MUST be changed in production
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=netstacks-dev-secret-change-in-production

# Access token expiration in minutes (default: 30)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# Database Configuration
# ===========================================

# PostgreSQL password - MUST be changed in production
POSTGRES_PASSWORD=netstacks_secret_change_me

# Database URL (auto-constructed from above, or set explicitly)
DATABASE_URL=postgresql://netstacks:netstacks_secret_change_me@postgres:5432/netstacks

# Use PostgreSQL (true) or SQLite (false)
USE_POSTGRES=true

# ===========================================
# Celery Configuration
# ===========================================

# Redis connection for Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Number of Celery workers (default: 10)
CELERY_WORKERS=10

# ===========================================
# Service Ports (for direct access, bypassing Traefik)
# ===========================================

# Traefik reverse proxy (main entry point)
# Port 80 - HTTP traffic
# Port 8080 - Traefik dashboard

# Legacy monolith (direct access)
# NETSTACKS_PORT=8089

# Microservices (normally accessed via Traefik on port 80)
# Auth Service: 8011
# Config Service: 8002
# Devices Service: 8004

# ===========================================
# Timezone Configuration
# ===========================================

# TZ=America/New_York
# TZ=UTC
